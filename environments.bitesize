project: hpademo
environments:
  - name: dev
    namespace: hpa-dev
    services:
      - name: php-apache
        application: sampleproject
        version: 1.0
        port: 80
        replicas: 2
        deployment:
          method: rolling-upgrade
        hpa:
          min_replicas: 2
          max_replicas: 5
          metric:
           name: cpu
           target_average_utilization: 75
        requests:
          cpu: 200m           
        env:
          - name: TEST_ENV
            value: test
